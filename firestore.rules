rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Allow read access to /chats/{chatId} if the user's ID is in the members array
    match /chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
    }

    // ✅ Allow read access to /chats/{chatId}/messages/{messageId}
    // Only if the chatId matches the pattern: {uid}_other or other_{uid}
    match /chats/{chatId}/messages/{messageId} {
      allow read: if request.auth != null &&
        (chatId.matches('^' + request.auth.uid + '_.*$') || chatId.matches('^.*_' + request.auth.uid + '$'));
    }

    // ✅ Allow read access to /users/{userId}/{document=**}
    // Only if the document ID matches the authenticated user's ID
    match /users/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
